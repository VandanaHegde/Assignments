<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_5"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginTop="@dimen/padding_10"
    android:background="@color/colorWhite">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_3"
                android:text="Project Name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/project_name_text_view"
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/margin_3"
                android:text="Vandana" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_3"
                android:text="Project Url"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/html_url_text_view"
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/margin_3"
                android:text="URL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_3"
                android:text="Size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size_text_view"
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/margin_3"
                android:text="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_3"
                android:text="Watchers"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/watchers_text_view"
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/margin_3"
                android:text="11" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_3"
                android:text="Open Issues"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/issues_text_view"
                android:layout_width="@dimen/margin_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="@dimen/margin_3"
                android:text="0 " />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>